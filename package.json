{
	"name": "vscode-designer-addon",
	"description": "A HTML Designer for VsCode",
	"version": "0.0.1",
	"publisher": "node-projects",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/Microsoft/vscode-extension-samples"
	},
	"engines": {
		"vscode": "^1.74.0"
	},
	"categories": [
		"Programming Languages",
		"Visualization"
	],
	"activationEvents": [
		"onWebviewPanel:designer"
	],
	"main": "./out/vscode/extension.js",
	"contributes": {
		"customEditors": [
			{
				"viewType": "designer.designerTextEditor",
				"displayName": "Designer",
				"selector": [
					{
						"filenamePattern": "*.html"
					},
					{
						"filenamePattern": "*.vue"
					},
					{
						"filenamePattern": "*.js"
					},
					{
						"filenamePattern": "*.ts"
					},
					{
						"filenamePattern": "*.svelte"
					}
				],
				"priority": "option"
			}
		],
		"views": {
			"explorer": [
				{
					"id": "designerTreeView",
					"name": "designer-tree"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile && npm run compileWebview",
		"compile": "tsc -p ./src/vscode",
		"compileWebview": "tsc -p ./src/webview",
		"lint": "eslint \"src/**/*.ts\"",
		"watch": "tsc -w -p ./src/vscode",
		"watchWebview": "tsc -w -p ./src/webview",
		"vsce": "vsce package"
	},
	"devDependencies": {
		"@types/node": "^18.15.0",
		"@types/vscode": "^1.74.0",
		"@types/vscode-webview": "^1.57.1",
		"@typescript-eslint/eslint-plugin": "^5.54.1",
		"@typescript-eslint/parser": "^5.54.1",
		"@vscode/vsce": "^2.18.0",
		"eslint": "^8.36.0",
		"typescript": "^4.9.5"
	},
	"dependencies": {
		"@adobe/css-tools": "^4.3.0-beta.1",
		"@node-projects/base-custom-webcomponent": "^0.10.9",
		"@node-projects/lean-he-esm": "^3.3.0",
		"@node-projects/node-html-parser-esm": "^6.1.5",
		"@node-projects/web-component-designer": "^0.0.216",
		"construct-style-sheets-polyfill": "^3.1.0",
		"es-module-shims": "^1.7.0"
	}
}
